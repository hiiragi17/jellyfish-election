<%= form_with model: @jellyfish, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 10 %>
  </div>
    <div class="form-group">
    <%= f.label :jellyfish_image %>
    <%= f.file_field :jellyfish_image, class: 'form-control mb-3', accept: 'image/*' %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>