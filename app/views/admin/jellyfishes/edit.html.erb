<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= "編集" %></h1>
      <%= form_with model: @jellyfish, url: admin_jellyfish_path(@jellyfish), local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :jellyfish_image %>
          <%= f.file_field :jellyfish_image, onchange: 'previewFileWithId(preview)', class: 'form-control', accept: 'image/*' %>
          <%= f.hidden_field :jellyfish_image_cache %>
        </div>
        <div class='mt-3 mb-3'>
          <%= image_tag @jellyfish.jellyfish_image.url,
                        id: 'preview',
                        size: '300✖️200' %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>